@model IEnumerable<BlockchainMvcApp.Models.Block>

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Mining Blocks</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding: 20px;
            background-color: #f8f9fa;
        }
        .container {
            max-width: 900px;
            background: white;
            padding: 20px;
            padding-bottom: 100px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        h1 {
            margin-bottom: 30px;
        }
        .table th, .table td {
            text-align: center;
            vertical-align: middle;
        }
        .hash-column {
            word-break: break-all;
        }
        .block-container {
            margin-top: 30px;
            display: flex;
            flex-direction: row;
            flex-wrap: nowrap;
            overflow-x: auto;
            padding: 10px;
            position: relative;
        }
        .block {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            margin: 5px;
            border-radius: 5px;
            position: relative;
        }
        .block-chain {
            display: flex;
            align-items: center;
            position: relative;
            width: 100%;
        }
        .chain-line {
            height: 2px;
            background-color: #007bff;
            flex-grow: 1;
        }
        .block-container .block:not(:last-child) {
            margin-right: 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Mining Blocks</h1>

        <!-- 採掘フォーム -->
        <form method="post" action="@Url.Action("MineNextBlock")" class="d-flex justify-content-between align-items-center mb-4">
            <div class="input-group w-50">
                <span class="input-group-text">難易度</span>
                <input type="number" name="difficulty" class="form-control" min="1" value="@ViewBag.Difficulty">
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Mine Next Block</button>
        </form>

        <!-- ブロックチェーン一覧 -->
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Block Index</th>
                        <th>Difficulty</th>
                        <th>Nonce</th>
                        <th class="hash-column">Hash</th>
                        <th>Mining Time (ms)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var block in Model)
                    {
                        <tr>
                            <td>@block.Index</td>
                            <td>@block.Difficulty</td>
                            <td>@block.Nonce</td>
                            <td class="hash-column">@block.Hash</td>
                            <td>@block.MiningTime</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- 新しく追加されるブロックの視覚的表示 -->
        <div class="block-container" id="blockContainer">
            <div class="block-chain">
                @foreach (var block in Model)
                {
                    <div class="block">
                        @block.Hash.Substring(0, 5) <!-- ハッシュの最初の5文字を表示 -->
                    </div>
                    @if (!block.Equals(Model.Last()))
                    {
                        <div class="chain-line"></div>
                    }
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
